@model Regasirea_Informatiei_Lab.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <h2 class="">
            Autentificare
            <br>
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="fas fa-sign-in-alt"></i> Autentificare
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                
                <form class="row gx-3 gy-2 align-items-center" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-sm-3">
                        <label asp-for="Email" class="visually-hidden">Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="loginEmail" placeholder="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="Password" class="visually-hidden">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="loginPassword" placeholder="Parola">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-auto">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="loginCheckbox">
                            <label asp-for="RememberMe" class="form-check-label" for="loginCheckbox">
                                Tine-ma minte
                            </label>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt"></i>
                            Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
       