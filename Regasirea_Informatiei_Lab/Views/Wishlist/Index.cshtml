@model Regasirea_Informatiei_Lab.ViewModels.WishlistCartViewModel

<h2 class="float-center">Lista cu produse favorite</h2>




<div class="container" style="margin-top:120px;">


    <div class="row" >

        @foreach(var item in Model.Wishlist.test)
        {
                    var photoPath = "/images/" + (item.Produs.ProductPicture ?? "img.png");

            
            <div class="col-md-3" style="float:left">
          <div class="card mb-2 rounded">
            <img class="card-img-top"
                 src="@photoPath" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title">@item.Produs.ProductName</h4>
              <p class="card-text">
                @item.Produs.Pret.ToString() RON    
              </p>
              <a  class="btn btn-info" asp-controller="Product" asp-action="Details" asp-route-id="@item.Produs.ProductId" alt="">Detalii</a>
            </div>
          </div>
        </div>



        }

    </div>

    <div class="text-center">
    <a class="btn btn-info" asp-controller="Wishlist" asp-action="ClearWishlist">Sterge lista de produse</a>
    </div>
</div>