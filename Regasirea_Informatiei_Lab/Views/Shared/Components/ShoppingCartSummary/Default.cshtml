@model Regasirea_Informatiei_Lab.ViewModels.ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <li style="margin:0;padding:6px;">
        <a asp-controller="ShoppingCart" asp-action="Index">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                <img src="https://img.icons8.com/external-flatart-icons-outline-flatarticons/64/000000/external-cart-black-friday-flatart-icons-outline-flatarticons.png" style="height:20px;width:20px; color:white;" @Model.ShoppingCart.ShoppingCartItems.Count />
            </span>
        </a>
    </li>
}