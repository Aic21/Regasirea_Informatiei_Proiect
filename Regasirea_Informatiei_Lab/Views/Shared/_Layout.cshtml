
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager;
@inject UserManager<User> userManager

<!doctype html>
<html lang="en">
<head>
    <title>OnlineStore</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="./css/owl.carousel.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.11.5/af-2.3.7/b-2.2.2/r-2.2.9/sl-1.3.4/datatables.min.css" />


</head>
<body>


    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" >
            <h1><a href="index.html" class="logo"><img src="/css/img_website/logo.png" style="height:80%;width:80%" /></a></h1>
            <ul class="list-unstyled components mb-5">

                @if (signInManager.IsSignedIn(User) && User.IsInRole("User"))
                {
                    @await Component.InvokeAsync("CategoryMenu")


                    var user = await userManager.GetUserAsync(signInManager.Context.User);

                    var photoPath = "/images/" + (user.ProfilePicture ?? "profile.png");
                    <ul class="navbar-nav ml-auto">
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                                <img src="@photoPath" width="40" height="40" class="rounded-circle">

                            </a>

                            <ul class="dropdown-menu" style="margin-left:3px;background-color:white;">
                                <li>
                                    <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration:none; color:black;margin-left:10px; font-size:16px;" asp-controller="shoppingcart" asp-action="Index">ShoppingCart</a>
                                </li>
                                <li>
                                    <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration:none; color:black;margin-left:10px; font-size:16px;" asp-controller="wishlist" asp-action="Index">Wishlist</a>
                                </li>
                                <li>
                                    <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration:none; color:black;margin-left:10px; font-size:16px;" asp-controller="order" asp-action="listorder">MyOrder</a>
                                </li>
                                <li>
                                    <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration:none; color:black;margin-left:10px; font-size:16px;" asp-controller="profile" asp-action="personaldata">Account</a>
                                </li>
                                <form method="post" style="text-decoration:none; color:black;margin-left:10px; font-size:16px;" asp-controller="account" asp-action="logout">
                                    <button type="submit"
                                            class="btn ">
                                        <span class="fa fa-sign-out-alt"></span> Logout
                                    </button>
                                </form>
                            </ul>
                        </li>

                        <li class="active">
                            <a asp-action="Index" asp-controller="Home"><span class="fa fa-home"></span> Home</a>
                        </li>
                        <li>
                            <a asp-action="BlogList" asp-controller="Blog"><span class="fa fa-user"></span> Artcole   </a>
                        </li>
                        <li>
                            <a asp-action="CreateContact" asp-controller="Contact"><span class="fa fa-solid fa-address-book"></span> Contact</a>
                        </li>
                    </ul>
                }
                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="product" asp-action="ListProduct">List Product</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="product" asp-action="CreateProduct">Create Product</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="category" asp-action="CategoryList">List Category</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="category" asp-action="CreateCategory">Create Category</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white;" asp-controller="subcategory" asp-action="SubcategoryList">List Subcategory</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="subcategory" asp-action="CreateSubcategory">Create Subcategory</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="blog" asp-action="AdminListBlog">List Blog</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="blog" asp-action="CreateBlog">Create Blog</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="administration" asp-action="ListRoles">Manage Roles</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="administration" asp-action="ListUsers">Manage Users</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white; " asp-controller="order" asp-action="List">Manage Order</a>
                    </li>
                    <li>
                        <i class="fas fa-sign-out-alt"></i>  <a style="text-decoration: none; color: black; margin-left: 10px; font-size: 20px; color: white;" asp-controller="contact" asp-action="ContactList">Manage Contacts</a>
                    </li>
                }

                else
                {
                    @await Component.InvokeAsync("CategoryMenu")

                    <li class="active">
                        <a asp-action="Index" asp-controller="Home"><span class="fa fa-home"></span> Home</a>
                    </li>
                    <li>
                        <a asp-action="BlogList" asp-controller="Blog"><span class="fa fa-user"></span> Artcole   </a>
                    </li>
                    <li>
                        <a asp-action="CreateContact" asp-controller="Contact"><span class="fa fa-solid fa-address-book"></span> Contact</a>
                    </li>
                    <li>
                        <a asp-action="register" asp-controller="account">
                            <span class="fa modal-dialog"></span>
                            Register
                        </a>
                    </li>


                    <li>
                        <a asp-action="login" asp-controller="account">
                            <span class="glyphicon glyphicon-log-out"></span>
                            Login
                        </a>
                    </li>
                }

            </ul>

            <div class="footer">
                <p>
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib.com</a>
                </p>
                <div class="social-btns">
                    <a class="btn facebook" href="#"><i class="fa fa-facebook"></i></a><a class="btn twitter" href="#"><i class="fa fa-twitter"></i></a><a class="btn google" href="#"><i class="fa fa-google"></i></a><a class="btn dribbble" href="#"><i class="fa fa-dribbble"></i></a><a class="btn skype" href="#"><i class="fa fa-skype"></i></a>
                </div>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5" ">

            <nav class="navbar navbar-expand-lg navbar-light bg-light" ">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="blog" asp-action="BlogList">Articole</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="product" asp-action="ListProducts">Produse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CreateContact" asp-controller="contact">Contact</a>
                            </li>
                            @await Component.InvokeAsync("ShoppingCartSummary")

                            <form  action="/Product/Search" method="get">
                                <p>
                                    <input type="text" name="SearchString" id="SearchString"  value="@ViewBag.SearchString" />
                                    <input type="submit" value="Search" />
                                </p>
                            </form>

                        </ul>
                    </div>
                </div>
            </nav>




            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                    @RenderSection("stripe", required: false)
                </main>
            </div>

        </div>
    </div>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/css/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.11.5/af-2.3.7/b-2.2.2/r-2.2.9/sl-1.3.4/datatables.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css"/>
    <script type="text/javascript">
        $(function () {
            $("#SearchString").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/product/AutoComplete/',
                        data: { "prefix": request.term },
                        type: "POST",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
               
                minLength: 1
            });
        });
    </script>


</body>
</html>