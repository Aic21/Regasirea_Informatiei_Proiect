@model List<Regasirea_Informatiei_Lab.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<div class="container-fluid text-center container-content">
    <hr>
    <form method="post">
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="fas fa-list"></i> Lista utilizatori in rol
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                </p>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">User Id</th>
                            <th scope="col">User Email</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tbody>
                            <tr>
                                <th scope="row">@i</th>
                                <td>@Model[i].UserId</td>
                                <td>@Model[i].UserName</td>
                                <td>
                                    <div class="form-check">
                                        <input type="hidden" asp-for="@Model[i].UserId" />
                                        <input type="hidden" asp-for="@Model[i].UserName" />
                                        <input asp-for="@Model[i].isSelected" class="form-check-input">
                                        <label class="form-check-label" asp-for="@Model[i].isSelected">
                                            Adauga rol
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <div class="mt-3 mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-wrench"></i>
                    Update
                </button>
                <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-danger">
                    <i class="fas fa-window-close"></i>
                    Cancel
                </a>
            </div>
        </div>
    </form>
    <div class="card mb-3">
        <div class="card-header bg-custom text-white">
            <i class="far fa-question-circle"></i> Informatii
        </div>
        <div class="card-body">
            <h5 class="card-title"></h5>
            <p class="card-text">
                Un rol de utilizator defineste permisiunile pentru utilizatori de a efectua un grup de sarcini.
                <br>
                Foloseste butoanele de mai jos pentru a crea un rol nou sau pentru a vizualiza lista cu roluri.
            </p>
            <div>
                <a class="btn btn-outline-dark" asp-action="CreateRole" asp-controller="Administration">
                    <i class="fas fa-user-plus"></i>
                    Creaza rol nou
                </a>
                <a class="btn btn-outline-dark" asp-action="ListRoles" asp-controller="Administration">
                    <i class="fas fa-address-card"></i>
                    Lista roluri
                </a>
            </div>
        </div>
    </div>
    <hr>
</div>