@model Regasirea_Informatiei_Lab.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <h2 class="">

            <br>
            Modifica roluri
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="fas fa-sign-in-alt"></i> Editeaza rol
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                    Introduceti numele rolului si apasati pe butonul de update pentru a salva modificarile
                </p>
                <form class="gx-3 gy-2 align-items-center" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Id">Role ID</label>
                        <input disabled asp-for="Id" class="form-control" id="roleId">
                    </div>
                    <div class="form-group row">
                        <label asp-for="RoleName">Role Name</label>
                        <input asp-for="RoleName" class="form-control" id="roleName">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-wrench"></i>
                            Update
                        </button>
                        <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-danger">
                            <i class="fas fa-window-close"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <h2 class="">
            <i class="fas fa-users"></i>
            Users in this role
        </h2>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="far fa-question-circle"></i> Adauga sau sterge utilizator din rol
            </div>
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">
                    @if (Model.Users.Any())
                    {
                        int i = 1;
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">User Email</th>
                                </tr>
                            </thead>
                            @foreach (var user in Model.Users)
                            {
                                <tbody>
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@user</td>
                                    </tr>
                                </tbody>
                                i++;
                            }
                        </table>
                    }
                    else
                    {
                        <h5 class="card-title">Nu exista utilizatori in acest rol</h5>
                    }
                </p>
                <a class="btn btn-primary" asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id">
                    <i class="fas fa-user-plus"></i>
                    Adauga utilizator
                </a>
                <a class="btn btn-danger" asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id">
                    <i class="fas fa-user-times"></i>
                    Sterge utilizator
                </a>
            </div>
        </div>
        <hr />
    </div>
</div>
