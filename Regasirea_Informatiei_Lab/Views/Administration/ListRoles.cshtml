@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}


@if (Model.Any())
{
    int i = 1;
    <div class="content container-fluid">
        <div class="container-fluid text-center container-content">
            <h2 class="">

                <br>
                Administreaza Roluri
            </h2>
        </div>
        <div class="container-fluid text-center container-content">
            <hr>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="fas fa-sign-in-alt"></i> Lista roluri
                </div>
                <div class="card-body mx-auto">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        Selecteaza rolul pe care doresti sa il editezi folosind butonul Edit sau sterge rolul folosind Delete
                    </p>
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Role Id</th>
                                <th scope="col">Role Name</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        @foreach (var role in Model)
                        {
                            <tbody>
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@role.Id</td>
                                    <td>@role.Name</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">
                                            <i class="fas fa-edit"></i>
                                            Edit
                                        </a>
                                        <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">

                                            <span id="confirmDeleteSpan_@role.Id" style="display: none">
                                                <span>Esti sigur ca vrei sa stergi?</span>
                                                <button type="submit" class="btn btn-danger">Yes</button>
                                                <a href="#" class="btn btn-primary" onclick="confirmDelete('@role.Id', false)">No</a>
                                            </span>
                                            <span id="deleteSpan_@role.Id">
                                                <a href="#" class="btn btn-danger" onclick="confirmDelete('@role.Id', true)">Delete</a>
                                            </span>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                            i++;
                        }
                    </table>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="far fa-question-circle"></i> Creare rol nou
                </div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        Un rol de utilizator defineste permisiunile pentru utilizatori de a efectua un grup de sarcini.
                        <br>

                        <br>
                        Folositi butonul de mai jos pentru a crea un rol nou.
                    </p>
                    <a class="btn btn-outline-dark" asp-action="CreateRole" asp-controller="Administration">
                        <i class="fas fa-user-plus"></i>
                        Creaza rol nou
                    </a>
                </div>
            </div>
            <hr>
        </div>
    </div>
}
else
{
    <div class="content container-fluid">
        <div class="container-fluid text-center container-content">
            <hr>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="fas fa-sign-in-alt"></i> Lista roluri
                </div>
                <div class="card-body mx-auto">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        In prezent nu exista roluri definite
                    </p>
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Role Id</th>
                                <th scope="col">Role Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="far fa-question-circle"></i> Creare rol nou
                </div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        Un rol de utilizator defineste permisiunile pentru utilizatori de a efectua un grup de sarcini.
                        <br>

                        <br>
                        Folositi butonul de mai jos pentru a crea un rol nou.
                    </p>
                    <a class="btn btn-outline-dark" asp-action="CreateRole" asp-controller="Administration">
                        <i class="fas fa-user-plus"></i>
                        Creaza rol nou
                    </a>
                </div>
            </div>
            <hr>
        </div>
    </div>
}