@using Microsoft.AspNetCore.Identity
@model IEnumerable<Contact>

@{
    ViewData["Title"] = " - Contact";
}


@if (Model.Any())
{
    int i = 1;
    <div class="content container-fluid">
        <div class="container-fluid text-center container-content">
            <h2 class="">

                <br>
                Administreaza Mesaje Primite
            </h2>
        </div>
        <div class="container-fluid text-center container-content">
            <hr>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="fas fa-sign-in-alt"></i> Lista Categorii
                </div>
                <div class="card-body mx-auto">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                    </p>
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nr. Contact</th>
                                <th scope="col">Informatii</th>
                                <th scope="col">Actiuni</th>
                            </tr>
                        </thead>
                        @foreach (var contacts in Model)
                        {
                            <tbody>
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@contacts.ContactId</td>
                                    <td><button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal-@contacts.ContactId"> Informatii </button></td>
                                    <td>

                                        <a class="btn btn-danger" asp-action="DeleteContact" asp-controller="contact" asp-route-id="@contacts.ContactId">
                                            <i class="fa fa-delete"></i>
                                            Delete
                                        </a>
                                       <a class="btn btn-info" asp-action="Response" asp-controller="contact" asp-route-id="@contacts.ContactId">
                                            <i class="fa fa-envelope"></i>
                                            Raspunde
                                        </a>
                                </tr>
                            </tbody>
                            i++;
<div class="modal fade" id="exampleModal-@contacts.ContactId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Informatii mesaj cu numarul @contacts.ContactId</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

           
                    <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@contacts.Email</p>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nume</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@contacts.Name </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Subiect</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@contacts.Subject </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Problema</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@contacts.Problem </p>
              </div>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
                         
                        }
                    </table>
                </div>
            </div>
           
        </div>
    </div>
}
else
{
    <div class="content container-fluid">
        <div class="container-fluid text-center container-content">
            <hr>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="fas fa-sign-in-alt"></i> Lista roluri
                </div>
                <div class="card-body mx-auto">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        In prezent nu exista mesaje primite
                    </p>
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nr. Contact </th>
                                <th scope="col">Informatii </th>
                                <th scope="col">Actiuni </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="far fa-question-circle"></i> 
                </div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        <br>

                        <br>
                    </p>

                </div>
            </div>
            <hr>
        </div>
    </div>
}