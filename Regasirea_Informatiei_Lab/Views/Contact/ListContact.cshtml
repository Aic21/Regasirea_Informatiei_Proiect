@using Microsoft.AspNetCore.Identity
@model IEnumerable<Contact>

@{
    ViewData["Title"] = " - Contact";
}


@if (Model.Any())
{
    int i = 1;
    <div class="content container-fluid">
        <div class="container-fluid text-center container-content">
            <h2 class="">

                <br>
                Administreaza Mesaje Primite
            </h2>
        </div>
        <div class="container-fluid text-center container-content">
            <hr>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="fas fa-sign-in-alt"></i> Lista Categorii
                </div>
                <div class="card-body mx-auto">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                    </p>
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Contact Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Subject</th>
                                <th scope="col">Problem</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        @foreach (var contacts in Model)
                        {
                            <tbody>
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@contacts.ContactId</td>
                                    <td>@contacts.Name</td>
                                    <td>@contacts.Email</td>
                                    <td>@contacts.Subject</td>
                                    <td>@contacts.Problem</td>
                                    <td>

                                        <a class="btn btn-primary" asp-action="DeleteContact" asp-controller="contact" asp-route-id="@contacts.ContactId">
                                            <i class="fas fa-delete"></i>
                                            Delete
                                        </a>
                                </tr>
                            </tbody>
                            i++;
                        }
                    </table>
                </div>
            </div>
           
        </div>
    </div>
}
else
{
    <div class="content container-fluid">
        <div class="container-fluid text-center container-content">
            <hr>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="fas fa-sign-in-alt"></i> Lista roluri
                </div>
                <div class="card-body mx-auto">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        In prezent nu exista mesaje primite
                    </p>
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Contact Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Subject</th>
                                <th scope="col">Problem</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header bg-custom text-white">
                    <i class="far fa-question-circle"></i> 
                </div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        <br>

                        <br>
                    </p>

                </div>
            </div>
            <hr>
        </div>
    </div>
}