@model Regasirea_Informatiei_Lab.ViewModels.CreateBlogViewModel

<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <h2 class="">
            Administrare Blog
            <br>
            Adaugare
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="fas fa-user-plus"></i> Adaugare produs
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                </p>
                <form enctype="multipart/form-data" class="text-start" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-3">
                        <div class="input-group">
                            <span class="input-group-text">NumeProdus</span>
                            <input asp-for="Nume" type="text" class="form-control" placeholder="Nume">
                            <span asp-validation-for="Nume" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="BlogDescription" class="form-label">Descriere</label>
                        <textarea asp-for="BlogDescription" class="form-control white_bg" rows="4"></textarea>
                        <span asp-validation-for="BlogDescription" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <input asp-for="BlogImage" type="file" class="form-control custom-file-input" id="inputGroupFile02">
                        <label asp-for="BlogImage" class="input-group-text" for="inputGroupFile02">Poza</label>
                        <span asp-validation-for="BlogImage" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <input asp-for="BlogVideo" type="file" class="form-control custom-file-input" id="inputGroupFile01">
                        <label asp-for="BlogVideo" class="input-group-text" for="inputGroupFile01">Poza</label>
                        <span asp-validation-for="BlogVideo" class="text-danger"></span>
                    </div>


                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary" id="buton">
                            <i class="fas fa-user-plus"></i>
                            Adauga
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="far fa-question-circle"></i> Adaugare Produs
            </div>
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">

                </p>
                <a asp-action="BlogList" asp-controller="blog" class="btn btn-outline-dark">
                    <i class="fas fa-sign-in-alt"></i>
                    Articole Adaugate
                </a>
            </div>
        </div>
    </div>
</div>

