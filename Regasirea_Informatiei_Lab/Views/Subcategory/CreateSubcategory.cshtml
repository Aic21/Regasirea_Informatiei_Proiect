@model Regasirea_Informatiei_Lab.ViewModels.CreateSubcategoryViewModel

@{
    ViewData["Title"] = "Create SubCategory";
}

<div class="content container-fluid">
    <button type="button" id="sidebarCollapse" class="sidebarCollapse btn btn-outline-dark hide-on-desktop">
        <i class="fa fa-align-left"></i>
    </button>
    <div class="container-fluid text-center container-content">
        <h2 class="">
            Adauga subcategorie
            <br>
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="fas fa-sign-in-alt"></i> Subcategorie
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">

                </p>
                <form enctype="multipart/form-data" class="row gx-3 gy-2 align-items-center" method="post">

                      <div class="form-group">
                            <label asp-for="Nume" class="input-group-text">Nume subcategorie</label>
                                <input asp-for="Nume" type="text" class="form-control">
                        </div>
                       <div class="col">
                            <label asp-for="Category" class="form-label">Categorie</label>
                            <select asp-for="Category" class="form-select" asp-items="@(new SelectList(Model.Categories))">
                                <option selected>Alege...</option>
                            </select>
                        </div>

                    <div class="col-auto ">
                        <button type="submit" class="btn btn-info">
                            <i class="fa fa-plus"></i>
                            Adauga
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <hr>
    </div>
</div>




